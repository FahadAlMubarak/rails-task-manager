<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0"><%= @task.title %></h2>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Details:</strong> <%= @task.details %></p>
      <p class="card-text"><strong>Completed:</strong> <%= @task.completed ? "Yes" : "No" %></p>
    </div>
    <div class="card-footer text-end">
      <%= link_to "Back", tasks_path, class: "btn btn-secondary me-2" %>
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-warning me-2" %>
      <%= link_to "Delete", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>

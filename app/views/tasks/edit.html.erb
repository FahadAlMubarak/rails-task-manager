<div class="container mt-5">
  <h1 class="mb-4">Edit your Task</h1>
  <%= form_with model: @task, local: true, html: { class: 'needs-validation' } do |t| %>
    <div class="mb-3">
      <%= t.label :title, class: "form-label" %>
      <%= t.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= t.label :details, class: "form-label" %>
      <%= t.text_field :details, class: "form-control" %>
    </div>
    <div class="form-check mb-3">
      <%= t.label :completed, class: "form-check-label" %>
      <%= t.check_box :completed, class: "form-check-input" %>
    </div>
    <%= t.submit "Save Changes", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back", tasks_path, class: "btn btn-secondary mt-3" %>
</div>
